<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Parqueos"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtNumeroMatricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Numero de matricula" />

    <EditText
        android:id="@+id/txtTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Tiempo" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAceptarParqueo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onClickBtnAceptarDialog"
            android:text="Aceptar" />

        <Button
            android:id="@+id/btnCancelarParqueo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="onClicBtnCancelarDialog"
            android:text="Cancelar" />
    </LinearLayout>
</LinearLayout>